# ---- Database ----
# SQLite (dev default)
DATABASE_URL=sqlite:///../data/app.db
# RDS Postgres example (future):
# DATABASE_URL=postgresql+psycopg://USER:PASSWORD@your-rds-endpoint:5432/DBNAME?sslmode=require

# ---- AWS (optional; enable S3 backups when ready) ----
STORE_ESSAY_S3=false
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_PREFIX=writing-feedback/
# For local dev only (omit in production; use instance role/ECS task role)
AWS_PROFILE=default
